            $('.modal .modal-title').text(title);

            $('.modal').modal();
        });


        //document ready popup
        $(document).ready(function () {
            var content = $('.popup').find('p').text();
            var title = $('.popup').find('h6.heading').text();

            $('.modal img').attr('src', global_image);
            $('.modal .modal-body').text(content);
            $('.modal .modal-title').text(title);
            $('.modal').modal();



