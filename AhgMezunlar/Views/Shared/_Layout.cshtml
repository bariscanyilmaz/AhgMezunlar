    <!--Body-->
    @RenderBody()


    <!-- Cotntact form -->
    <div id="contact" class="container">
        <form id="contactForm" class=" form mx-auto">
            <h4>İletişim Formu</h4>
            <div class="form-group row">
                <div class="col-md-6">
                    <label for="name">Adı Soyadı</label>
                    <input type="text" class="form-control form-control-lg" id="name" name="SenderName" placeholder="Adınız Soyadınız">
                </div>
                <div class="col-md-6">
                    <label for="object">Konu</label>
                    <input type="text" class="form-control form-control-lg " id="object" name="Object" placeholder="Konu">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label for="email">Email</label>
                    <input type="email" class="form-control form-control-lg" id="email" name="Email" placeholder="Email adresiniz">
                </div>
                <div class="col-md-6">
                    <label for="phone">Telefon Numaranız</label>
                    <input type="tel" class="form-control form-control-lg" id="phone" name="Phone" placeholder="Telefon Numaranız">
                </div>
            </div>
            <div class="form-group">
                <label for="message">Mesaj</label>
                <textarea class="form-control form-control-lg" id="message" name="Content" rows="5" placeholder="Mesajınız"></textarea>
            </div>
            <input id="submit" type="button" class="btn btn-success" value="Gönder" />
        </form>
    </div>

    <!--Footer -->
    <div class="wrapper row4">
        <footer id="footer" class="hoc clear">
