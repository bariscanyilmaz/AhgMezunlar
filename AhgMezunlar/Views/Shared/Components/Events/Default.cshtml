@model List<Events>

@if (Model.Count() > 0)
{

    for (int i = 0; i < Model.Count; i++)
    {
        <li data-image=@if (Model[i].PhotoPath != null) { @("img/Events/" + Model[i].PhotoPath.ToString())} else { @("/img/Defaults/320x220.png") } class="one_third @(i == 0 ? "first" : "") @(Model[i].PopupState == true ? "popup" : "")">
            <article>
                <a>
                    <i class="fa @Model[i].IconName"></i>
                </a>
                <h6 class="heading">@Model[i].Title</h6>
                <p>@Html.Raw(Model[i].Content)</p>
                <footer>
                    <a class="btn">Görüntüle &raquo;</a>
                </footer>
            </article>
        </li> 
    }

}
else
{
    <div class="alert alert-danger">
        İçerik Yok
    </div>
}