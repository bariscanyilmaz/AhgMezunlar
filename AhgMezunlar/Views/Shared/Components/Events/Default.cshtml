@model IEnumerable<Events>

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <li data-image="img/Events/@(item.PhotoPath)" class="one_third @(item.PopupState == true ? "popup" : "")">
            <article>
                <a>
                    <i class="fa @item.IconName"></i>
                </a>
                <h6 class="heading">@item.Title</h6>
                <p>@item.Content</p>
                <footer>
                    <a class="btn">Görüntüle &raquo;</a>
                </footer>
            </article>
        </li>
    }
}
else
{
    <div class="alert alert-danger">
        İçerik Yok
    </div>
}